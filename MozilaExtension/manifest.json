{
  "manifest_version": 2,
  "name": "Universal Media Downloader",
  "version": "1.0.0",
  "description": "Detect and Download all types of media files (Video, Audio, Streaming) including MP4, MP3, M3U8, and more",
  
  "permissions": [
    "activeTab",
    "storage",
    "downloads",
    "webRequest",
    "<all_urls>"
  ],
  
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  
  "browser_action": {
    "default_popup": "popup.html",
    "default_title": "Universal Media Downloader",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  
  "web_accessible_resources": [
    "injected.js"
  ],
  
  "applications": {
    "gecko": {
      "id": "universal-media-downloader@example.com",
      "strict_min_version": "57.0"
    }
  }
} 